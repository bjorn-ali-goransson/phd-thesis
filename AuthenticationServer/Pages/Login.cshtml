@page
@using System.Text.Json;

@model AuthenticationServer.Pages.LoginModel

@{
    Layout = "_Layout.cshtml";
    ViewData["Title"] = "Login";
}

<div class="container mt-5" style="max-width: 18rem;">
    
    <form method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <div class="card mb-5">
            <div class="card-header">
                Login
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label for="formFile" class="form-label">Please provide your certificate:</label>
                    <input class="form-control" type="file" name="certificate">
                </div>
                <center><button class="btn btn-primary" type="submit">Login</button></center>
            </div>
        </div>
    </form>
</div>
